<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="18dp">

    <Button
        android:id="@+id/installButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/install_wallpaper_button_text" />

    <Button
        android:id="@+id/prefsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_prefs_button_text" />

    <Button
        android:id="@+id/clearShapesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_shapes_button_text" />

    <Button
        android:id="@+id/downloadsPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/downloads_page_button_text"
        app:icon="@drawable/ic_baseline_open_in_new_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_version_text"
        />
</LinearLayout>